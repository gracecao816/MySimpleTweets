<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="Orientation">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/twitter_logo" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/twitter_blue_30"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="@android:color/white">

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBody"
        android:layout_marginTop="92dp"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="103dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toStartOf="@+id/tvName"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="327dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="135dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="31dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="111dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:text="TextView"
        android:textColor="@color/twitter_blue_fill_pressed" />

    <ImageButton
        android:id="@+id/ibHome"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:background="@android:color/transparent"
        android:onClick="onClickHome"
        app:srcCompat="@drawable/ic_home_twitter" />

    <ImageView
        android:id="@+id/ivTwitterLogo"
        android:layout_width="209dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        app:srcCompat="@drawable/twitter_logo" />

</RelativeLayout>